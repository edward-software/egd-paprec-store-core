                                    {% set color = null %}
                                    {% if quoteRequest.overallDiscount == 0 %}
                                        {% set color = 'black' %}
                                    {% elseif quoteRequest.overallDiscount > 0 %}
                                        {% set color = 'green' %}
                                    {% elseif quoteRequest.overallDiscount < 0 %}
                                        {% set color = 'red' %}
                                    {% endif %}
                                    {% for quoteRequestLine in quoteRequest.quoteRequestLines %}
                                        <tr>
                                            <td>{{ quoteRequestLine.id|formatId(6) }}</td>
                                            <td>
                                                <a href="{{ path('paprec_product_view', {id: quoteRequestLine.product.id}) }}">
                                                    {{ quoteRequestLine.product|productLabelTranslation(app.user.lang) }}
                                                </a>
                                            </td>
                                            <td>{{ quoteRequestLine.quantity }}</td>
                                            <td>
                                                {% if quoteRequestLine.editableRentalUnitPrice == 0 %}
                                                    0
                                                {% else %}
                                                    {{ (((quoteRequestLine.rentalRate / 1000000000000000) * (quoteRequestLine.editableRentalUnitPrice)))|formatAmount('EUR', app.request.locale) }}
                                                    {#                                                    #}{# <span class="small color-darkgray">({{ ((quoteRequestLine.editableRentalUnitPrice - quoteRequestLine.rentalUnitPrice) / quoteRequestLine.rentalUnitPrice * 100 * 100)|formatAmount('PERCENTAGE', app.request.locale) }})</span> #}
                                                    {#                                                    {% set percentageRental = (quoteRequest.overallDiscount + (quoteRequestLine.editableRentalUnitPrice - quoteRequestLine.rentalUnitPrice) / quoteRequestLine.rentalUnitPrice * 100 * 100) %} #}
                                                    {#                                                    {% set colorRental = null %} #}
                                                    {#                                                    {% if percentageRental == 0 %} #}
                                                    {#                                                        {% set colorRental = 'black' %} #}
                                                    {#                                                    {% elseif percentageRental > 0 %} #}
                                                    {#                                                        {% set colorRental = 'green' %} #}
                                                    {#                                                    {% elseif percentageRental < 0 %} #}
                                                    {#                                                        {% set colorRental = 'red' %} #}
                                                    {#                                                    {% endif %} #}
                                                    <span class="small"
                                                          style="color: {{ color }}">({{ quoteRequest.overallDiscount|formatAmount('PERCENTAGE', app.request.locale) }})</span>
                                                {% endif %}
                                            </td>
                                            <td>
