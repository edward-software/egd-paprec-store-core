{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.QuoteRequest.View'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'Commercial.QuoteRequest.QuoteRequests'|trans(null, null, 'DE') }}
{% endblock %}

{% block main_content %}
    <div class="col-md-12">
        <div class="col-md-12">
            <!-- FLASH MESSAGE -->
            <div class="view-box">

                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-danger">{{ ('Commercial.QuoteRequest.Error.' ~ flashMessage)|trans }}</div>
                {% endfor %}

                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">{{ ('Commercial.QuoteRequest.Success.' ~ flashMessage)|trans }}</div>
                {% endfor %}
            </div>
            <!-- CARD -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-quoteRequest"></i> {{ 'Commercial.QuoteRequest.View'|trans }}
                    </h4>
                    <div class="float-right">
                        {% if not quoteRequest.missionSheet %}
                            {% if is_granted('ROLE_COMMERCIAL') or is_granted('ROLE_COMMERCIAL_MULTISITES') %}
                                {% if hasContract and quoteRequest.quoteStatus == 'CONTRACT_SIGNED' %}
                                    <a href="{{ path("paprec_quote_request_mission_sheet_add", {id: quoteRequest.id}) }}"
                                       class="btn btn-sm btn-success"><i
                                                class="fa fa-xs fa-plus"></i> {{ 'Commercial.QuoteRequest.MissionSheet.Add'| trans({}, "messages", app.request.locale) }}
                                    </a>
                                {% endif %}
                            {% endif %}
                        {% else %}

                            {% if is_granted('ROLE_MANAGER_COMMERCIAL') %}
                                <a href="{{ path("paprec_quote_request_mission_sheet_edit", {id: quoteRequest.id, missionSheetId: quoteRequest.missionSheet.id}) }}"
                                   class="btn btn-sm btn-warning"><i
                                            class="fa fa-xs fa-plus"></i> {{ 'Commercial.QuoteRequest.MissionSheet.Edit'| trans({}, "messages", app.request.locale) }}
                                </a>
                            {% endif %}

                            {% if quoteRequest.missionSheet.status == 'NOT_VALIDATED' or quoteRequest.missionSheet.status == '' %}
                                <a id="commmecialQuoteRequestMissionSheetValidateButton" href="javascript:void(0);"
                                   class="btn btn-sm btn-danger"><i
                                            class="fa fa-xs fa-check"></i> {{ 'Commercial.MissionSheet.Validate'|trans }}
                                </a>
                            {% endif %}
                        {% if quoteRequest.missionSheet.status == 'VALIDATED' %}
                            <a href="{{ path("paprec_quote_request_mission_sheet_download", {id: quoteRequest.id}) }}"
                               class="btn btn-sm btn-secondary"><i
                                        class="fa fa-xs fa-plus"></i> {{ 'Commercial.QuoteRequest.MissionSheet.GeneratePdf'| trans({}, "messages", app.request.locale) }}
                            </a>
                            {% endif %}
                        {% endif %}
                        <a href="{{ path("paprec_quote_request_follow_up_add", {id: quoteRequest.id}) }}"
                           class="btn btn-sm btn-success"><i
                                    class="fa fa-xs fa-plus"></i> {{ 'Commercial.QuoteRequest.FollowUp.Add'| trans({}, "messages", app.request.locale) }}
                        </a>
                        {% if quoteRequest.postalCode %}
                            <a id="downloadGeneratedQuoteButton"
                               href="{{ path("paprec_quote_request_download", {id: quoteRequest.id}) }}"
                               class="btn btn-sm btn-secondary"><i
                                        class="fa fa-xs fa-download"></i> {{ 'Commercial.QuoteRequest.Download-quote'|trans }}
                            </a>
                        {% endif %}
                        <button class="btn btn-sm btn-primary"
                                data-target="#uploadQuoteRequestFileModal" data-toggle="modal"
                                id="openModalUploadQuoteRequestFile"><i
                                    class="fa fa-file"></i> {{ 'Commercial.QuoteRequestFile.BtnAddLabel'| trans({}, "messages", app.request.locale) }}
                        </button>
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-success mr-1 send-generated-contract-button {% if not isAbleToSendContractEmail %}btn-disabled{% endif %}"><i
                                    class="fa fa-xs fa-envelope"></i> {{ 'Commercial.QuoteRequest.Send-contract'|trans }}
                        </a>
                        <a href="{{ path("paprec_quoteRequest_edit", {id: quoteRequest.id}) }}"
                           class="btn btn-sm btn-warning"><i
                                    class="fa fa-xs fa-edit"></i> {{ 'Commercial.QuoteRequest.Edit'|trans }}</a>
                        <a id="commmecialQuoteRequestRemoveButton" href="javascript:void(0);"
                           class="btn btn-sm btn-danger"><i
                                    class="fa fa-xs fa-trash"></i> {{ 'General.Remove'|trans }}</a>
                        <!-- Modal d'ajout de fichiers au mail -->
                        <div class="modal fade" id="uploadQuoteRequestFileModal" tabindex="-1" role="dialog"
                             aria-labelledby="Upload Picture" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <form id="formAddQuoteRequestFile" name="formAddQuoteRequestFile"
                                          action="{{ path("paprec_quote_request_add_quote_request_file", {quoteRequestId: quoteRequest.id}) }}"
                                          method="post" enctype="multipart/form-data">
                                        <div class="modal-header">
                                            <h5 class="modal-title">
                                                {{ 'Commercial.QuoteRequestFile.AddTitle'| trans({}, "messages", app.request.locale) }}
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <div class="form-label">
                                                    <span>{{ 'Commercial.QuoteRequestFile.MaxSize'| trans({}, "messages", app.request.locale) }}</span>
                                                </div>
                                                <div class="form-content">
                                                    {{ form_widget(formAddQuoteRequestFile.systemPath, {'attr': {'class': 'form-control'}}) }}
                                                    {{ form_errors(formAddQuoteRequestFile.systemPath) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-label">
                                                    <span>{{ 'Commercial.QuoteRequestFile.Type.Type'| trans({}, "messages", app.request.locale) }}</span>
                                                </div>
                                                <div class="form-content">
                                                    {{ form_widget(formAddQuoteRequestFile.type, {'attr': {'class': 'form-control'}}) }}
                                                    {{ form_errors(formAddQuoteRequestFile.type) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-sm btn-secondary"
                                                    data-dismiss="modal">
                                                {{ 'General.Cancel'| trans({}, "messages", app.request.locale) }}
                                            </button>
                                            <button type="button" class="btn btn-sm btn-primary"
                                                    id="formAddQuoteRequestFileSubmitButton">
                                                {{ 'General.Save'| trans({}, "messages", app.request.locale) }}
                                            </button>
                                        </div>
                                        {{ form_rest(formAddQuoteRequestFile) }}
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="float-left">
                        <a href="{{ path('paprec_quoteRequest_index') }}" class="btn btn-sm btn-default"><i
                                    class="fa fa-xs fa-chevron-left"></i> {{ 'Commercial.QuoteRequest.List'|trans }}</a>
                    </div>
                </div>
