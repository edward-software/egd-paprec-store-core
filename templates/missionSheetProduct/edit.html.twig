{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.MissionSheetProduct.Edit'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.MissionSheetProduct.MissionSheetProducts'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogMissionSheetProductForm" action="" method="post">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-pencil-alt"></i> {{ 'Catalog.MissionSheetProduct.Edit'|trans }}
                        #{{ missionSheetProduct.id|formatId(6) }}
                    </h4>
                    <div class="float-right">

                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-mission-sheet-product-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'General.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-mission-sheet-product-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'General.Cancel'|trans }}</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'General.Information'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.MissionSheetProductLabel.Language.Language'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form2.language, {'attr': {'class': 'form-control missionSheetProduct-label-language-input'}}) }}
                                        {{ form_errors(form2.language) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.MissionSheetProductLabel.Name'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form2.name, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form2.name) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.MissionSheetProductLabel.Short-description'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form2.shortDescription, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form2.shortDescription) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.MissionSheetProduct.Details'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <div class="form-label">{{ 'Catalog.MissionSheetProduct.Code'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form1.code, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form1.code) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <div class="form-label">{{ 'Catalog.MissionSheetProduct.Capacity'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form1.capacity, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form1.capacity) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <div class="form-label">{{ 'Catalog.MissionSheetProduct.CapacityUnit'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form1.capacityUnit, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form1.capacityUnit) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.MissionSheetProduct.Dimensions'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form1.dimensions, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form1.dimensions) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.MissionSheetProduct.WasteClassification'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form1.wasteClassification, {'attr': {'class': 'form-control', 'maxlength': '10'}}) }}
                                        {{ form_errors(form1.wasteClassification) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.MissionSheetProduct.Comment'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form1.comment, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form1.comment) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-mission-sheet-product-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'General.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-mission-sheet-product-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'General.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form1) }}
        {{ form_rest(form2) }}
    </form>


{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-mission-sheet-product-save-button').on('click', function () {

                $('#catalogMissionSheetProductForm').submit();

            });

            $('.catalog-mission-sheet-product-cancel-button').on('click', function () {

                var url = "{{ path("paprec_mission_sheet_product_view", {id: missionSheetProduct.id}) }}";

                Swal.fire({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'General.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then(function (result) {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

            {% if missionSheetProductLabel.language == 'EN' %}
            $('.missionSheetProduct-label-language-input option:not(:selected)').each(function () {
                $(this).prop('disabled', true);
            });
            {% endif %}
        });
    </script>
{% endblock %}
