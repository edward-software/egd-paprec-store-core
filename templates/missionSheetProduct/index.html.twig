{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.MissionSheetProduct.MissionSheetProducts'|trans }}
{% endblock %}

{% block stylesheets %}
    <style>
        select.form-control {
            width: auto;
        }
    </style>
{% endblock %}

{% block content_title %}
    {{ 'Catalog.MissionSheetProduct.MissionSheetProducts'|trans }}
{% endblock %}

{% block main_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-list"></i> {{ 'Catalog.MissionSheetProduct.List'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="{{ path('paprec_mission_sheet_product_add') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.MissionSheetProduct.Add'|trans }}
                        </a>
{#                        <a href="{{ path('paprec_mission_sheet_product_export') }}" class="btn btn-sm btn-primary ">#}
{#                            <i class="fa fa-xs fa-file-excel"></i> {{ 'Catalog.MissionSheetProduct.Export'|trans }}#}
{#                        </a>#}
                    </div>
                </div>

                <div class="card-body">
                    <table id="missionSheetProductListDatatable" class="table table-striped table-bordered table-hover"
                           cellpadding="0" cellspacing="0" border="0" width="100%">
                        <thead>
                        <tr>
                            <th>{{ 'Catalog.MissionSheetProduct.Code'|trans }}</th>
                            <th>{{ 'Catalog.MissionSheetProductLabel.Name'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>

        $(function () {

            $('#missionSheetProductListDatatable').EgdDatatable({
                url: "{{ path('paprec_mission_sheet_product_loadList') }}",
                columns: [
                    {"data": "code"},
                    {"data": "name"},
                    {"data": "id", "width": "10%", "bSortable": false, "className": "cell-action-button"}
                ],
                rowDblclick: {
                    type: 'open',
                    url: "{{ path('paprec_mission_sheet_product_view', {id: '__rowId__'}) }}"
                },
                buttons: [
                    {
                        label: '<span data-toggle="tooltip" data-placement="top" title="{{ "General.Remove-multiple"|trans }}">{{ "General.Remove"|trans }}</span>',
                        type: 'ajaxMany',
                        url: "{{ path("paprec_mission_sheet_product_removeMany", {ids: '__rowIds__', json: 1}) }}",
                        confirmMessage: "{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn-sm',
                        buttons:
                            {
                                cancel: {
                                    label: '{{ 'General.Cancel'|trans|e('js') }}'
                                },
                                confirm: {
                                    label: '{{ 'General.Confirm'|trans|e('js') }}'
                                }
                            }
                    }
                ],
                rowButtons: [
                    {
                        label: "{{ 'General.View'|trans }}",
                        className: "btn btn-primary btn-sm",
                        icon: "fa fa-eye",
                        url: "{{ path('paprec_mission_sheet_product_view', {id: '__rowId__'}) }}"
                    },
                    {
                        label: "{{ 'General.Edit'|trans }}",
                        className: "btn btn-warning btn-sm edit-button",
                        icon: "fa fa-edit",
                        url: "{{ path('paprec_mission_sheet_product_edit', {id: '__rowId__'}) }}"
                    },
                    {
                        label: '{{ "General.Remove"|trans }}',
                        type: 'ajax',
                        url: "{{ path("paprec_mission_sheet_product_removeMany", {ids: '__rowId__', json: 1}) }}",
                        confirmMessage: "<span class='confirm-remove-style'>{{ 'General.Confirm'|trans|e('js') }}</span><br>{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn btn-danger btn-sm',
                        icon: "fa fa-times"
                    }

                ]
            });

            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}
