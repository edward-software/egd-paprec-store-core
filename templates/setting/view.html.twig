{% extends "base_admin.html.twig" %}

{% block title %}
  {{ 'Commercial.Setting.View'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
  {{ 'Commercial.Setting.Agencies'|trans }}
{% endblock %}

{% block main_content %}


  <div class="col-md-12">
    <!-- CARD -->
    <div class="card">
      <div class="card-header">
        <h4>
          <i class="fa fa-xs fa-folder"></i> {{ 'Commercial.Setting.View'|trans }}
        </h4>
        <div class="float-right">
          <a href="{{ path("paprec_setting_edit", {id: setting.id}) }}"
             class="btn btn-sm btn-warning"><i
                    class="fa fa-xs fa-edit"></i> {{ 'Commercial.Setting.Edit'|trans }}</a>
          <a id="catalogSettingRemoveButton" href="javascript:void(0);" class="btn btn-sm btn-danger"><i
                    class="fa fa-xs fa-trash"></i> {{ 'Commercial.Setting.Remove'|trans }}</a>
        </div>
        <div class="float-left">
          <a href="{{ path('paprec_setting_index') }}" class="btn btn-sm btn-default"><i
                    class="fa fa-xs fa-chevron-left"></i> {{ 'Commercial.Setting.List'|trans }}</a>
        </div>
      </div>
      <div class="card-body">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title">{{ 'General.Information'|trans }}</h5>
            </div>
            <div class="card-body row">
              <div class="col-md-12">
                <div class="form-group row">
                  <label class="col-md-4 col-form-label">{{ 'Commercial.Setting.KeyName.KeyName'|trans }}</label>
                  <label class="col-form-label col-md-8">
                    {{ ('Commercial.Setting.KeyName.'~setting.keyName)|trans }}
                  </label>
                </div>
                <div class="form-group row">
                  <label class="col-md-4 col-form-label">{{ 'Commercial.Setting.Value'|trans }}</label>
                  <label class="col-form-label col-md-8">
                    {{ setting.value }}
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-12 mt-3">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title">{{ 'General.System-information'|trans }}</h5>
            </div>
            <div class="card-body">

              <div class="form-group row">
                <label class="col-md-4 col-form-label">{{ 'General.Date-creation'|trans }}</label>
                <label class="col-form-label col-md-8">
                  {{ setting.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                </label>
              </div>

              <div class="form-group row">
                <label class="col-md-4 col-form-label">{{ 'General.Date-update'|trans }}</label>
                <label class="col-form-label col-md-8">
                  {{ setting.dateUpdate is empty ? "" : setting.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

{% block javascripts %}

  <script>
    $(function () {

      $('#catalogSettingRemoveButton').on('click', function () {

        var url = "{{ path("paprec_setting_remove", {id: setting.id}) }}";

        Swal.fire({
          title: "{{ 'General.Confirm'|trans }}",
          text: "{{ 'General.Confirm-remove'|trans }}",
          showCancelButton: true,
          confirmButtonText: "{{ 'General.Yes'|trans }}",
          cancelButtonText: "{{ 'General.No'|trans }}"
        }).then(function (result) {
          if (result.value) {
            $(location).attr('href', url);
          }
        });

      });
    });
  </script>
{% endblock %}
