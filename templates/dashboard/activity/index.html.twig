                                    <td>{{ data['qr_turnover_closed_won']['M_1']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_closed_won']['M']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_closed_won']['TOTAL']|format_currency('EUR') }}</td>
                                </tr>
                                <tr class="line-number">
                                    <th class="font-weight-normal text-right">dont clôturées non gagnées</th>
                                    <td>{{ data['qr_turnover_closed_not_won']['M_4_12']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_closed_not_won']['M_3']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_closed_not_won']['M_2']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_closed_not_won']['M_1']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_closed_not_won']['M']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_closed_not_won']['TOTAL']|format_currency('EUR') }}</td>
                                </tr>
                                <tr class="line-number">
                                    <th>soit total affaires générées (12 mois)</th>
                                    <td>{{ data['qr_turnover_total']['M_4_12']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_total']['M_3']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_total']['M_2']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_total']['M_1']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_total']['M']|format_currency('EUR') }}</td>
                                    <td>{{ data['qr_turnover_total']['TOTAL']|format_currency('EUR') }}</td>
                                </tr>
                                <tr class="line-number">
                                    <th class="text-right">Taux de signature</th>
                                    <td>{{ data['qr_turnover_signature']['M_4_12'] }} %</td>
                                    <td>{{ data['qr_turnover_signature']['M_3'] }} %</td>
                                    <td>{{ data['qr_turnover_signature']['M_2'] }} %</td>
                                    <td>{{ data['qr_turnover_signature']['M_1'] }} %</td>
                                    <td>{{ data['qr_turnover_signature']['M'] }} %</td>
                                    <td>{{ data['qr_turnover_signature']['TOTAL'] }} %</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('.filter-button').on('click', function () {
                var catalog = $('#selectedCatalog').val();
                var url = '{{ path('paprec_dashboard_activity_index', {'selectedCatalog': '0000'}) }}'.replace('0000', catalog);
                $(location).attr('href', url);
            });
        });
    </script>
{% endblock %}
