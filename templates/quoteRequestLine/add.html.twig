{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.QuoteRequestLine.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Commercial.QuoteRequestLine.Add'|trans }}
{% endblock %}

{% block main_content %}

    <form id="commercialQuoteRequestForm" action="" method="post">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-plus"></i> {{ 'Commercial.QuoteRequest.AddLine'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-success commercial-quoteRequestLine-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'General.Save'|trans }}</a>
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-danger commercial-quoteRequestLine-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'General.Cancel'|trans }}</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'General.Information'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="paprec-flex mb-2">
                                    <select id="selectedCatalog" class="form-control mr-2 input-sm col-4">
                                        <option value="#">Sélectionner catalogue</option>
                                        <option value="REGULAR"{% if selectedCatalog and selectedCatalog == 'REGULAR' %} selected{% endif %}>{{ 'Commercial.QuoteRequest.REGULAR'|trans }}</option>
                                        <option value="PONCTUAL"{% if selectedCatalog and selectedCatalog == 'PONCTUAL' %} selected{% endif %}>{{ 'Commercial.QuoteRequest.PONCTUAL'|trans }}</option>
                                        <option value="MATERIAL"{% if selectedCatalog and selectedCatalog == 'MATERIAL' %} selected{% endif %}>{{ 'Commercial.QuoteRequest.MATERIAL'|trans }}</option>
                                    </select>
                                    <select id="selectedRange" class="form-control mr-2 input-sm col-4">
                                        <option value="#">Sélectionner une gamme</option>
                                        {% if ranges and ranges|length > 0 %}
                                            {% for range in ranges %}
                                                {% if range.rangeLabels and range.rangeLabels|length %}
                                                    <option value="{{ range.id }}"{% if selectedRangeId and selectedRangeId == range.id %} selected{% endif %}>{{ range.rangeLabels[0].name }}</option>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}

                                    </select>
                                    {#                                    <button #}
                                    {#                                            id="applyFilterButton" #}
                                    {#                                            class="btn btn-outline-primary mr-2"> #}
                                    {#                                        Appliquer les filtres #}
                                    {#                                    </button> #}
                                    {#                                    <button #}
                                    {#                                            id="resetFilterButton" #}
                                    {#                                            class="btn btn-outline-secondary"> #}
                                    {#                                        Réinitialiser #}
                                    {#                                    </button> #}
                                </div>
                                <div class="form-group">
                                    <label class="form-label">{{ 'Commercial.QuoteRequestLine.Product'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.product, {'attr': {'class': 'form-control product-field'}}) }}
                                        {{ form_errors(form.product) }}
                                    </div>
                                </div>
                                <div class="form-group no-gutters">
                                    <label class="form-label">{{ 'Commercial.QuoteRequestLine.Quantity'|trans }}</label>
                                    <div class="form-content col-md-6">
                                        {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.quantity) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">{{ 'Commercial.QuoteRequestLine.Frequency'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.frequency, {'attr': {'class': 'form-control frequency-field'}}) }}
                                        {{ form_errors(form.frequency) }}
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-6">
                                        <label class="form-label">{{ 'Commercial.QuoteRequestLine.RegularPassingFrequency'|trans }}</label>
                                        <div class="form-content">
                                            {{ form_widget(form.frequencyTimes, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.frequencyTimes) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <label class="form-label">&nbsp;</label>
                                        <div class="form-content">
                                            {{ form_widget(form.frequencyInterval, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.frequencyInterval) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-success commercial-quoteRequestLine-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'General.Save'|trans }}</a>
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-danger commercial-quoteRequestLine-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'General.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            var hideFrequencyById = {{ hideFrequencyById|json_encode|raw }};

            $('.product-field').select2({
                language: "fr",
                placeholder: "Ajouter un produit",
                width: '100%'
            }).on('change', function (e) {
                if (hideFrequencyById[$(this).val()] === true) {
                    $('input[name*="quote_request_line_add[frequency]"]').each(function () {
                        $(this).prop("disabled", true);
                    });
                    $('select[name*="quote_request_line_add[frequencyTimes]"]').prop("disabled", true);
                    $('select[name*="quote_request_line_add[frequencyInterval]').prop("disabled", true);
                } else {
                    $('input[name*="quote_request_line_add[frequency]"]').prop("disabled", false);
                    $('select[name*="quote_request_line_add[frequencyTimes]"]').prop("disabled", false);
                    $('select[name*="quote_request_line_add[frequencyInterval]').prop("disabled", false);
                }
            });

            $('.commercial-quoteRequestLine-save-button').on('click', function () {
                $('#commercialQuoteRequestForm').submit();
            });


            $('.commercial-quoteRequestLine-cancel-button').on('click', function () {

                var url = "{{ path("paprec_quote_request_view", { id: quoteRequest.id }) }}";

                Swal.fire({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'General.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then(function (result) {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

            $('.frequency-field').on('click', function () {

                $('input[name*="quote_request_line_add[frequency]"]').change(function () {
                    if (this.value === 'PONCTUAL') {
                        $('select[name*="quote_request_line_add[frequencyTimes]"]').prop("disabled", true);
                        $('select[name*="quote_request_line_add[frequencyInterval]').prop("disabled", true);

                    } else if (this.value === 'MATERIAL') {
                        $('select[name*="quote_request_line_add[frequencyTimes]"]').prop("disabled", true);
                        $('select[name*="quote_request_line_add[frequencyInterval]').prop("disabled", true);
                    } else if (this.value === 'REGULAR') {
                        $('select[name*="quote_request_line_add[frequencyTimes]"]').prop("disabled", false);
                        $('select[name*="quote_request_line_add[frequencyInterval]').prop("disabled", false)
                    }
                });

            });


            $('#selectedCatalog, #selectedRange').on('change', function () {

                var selectedCatalog = '';
                if ($('#selectedCatalog').val() && $('#selectedCatalog').val() !== '#') {
                    selectedCatalog = $('#selectedCatalog').val();
                }

                var selectedRange = '';
                if ($('#selectedRange').val() && $('#selectedRange').val() !== '#') {
                    selectedRange = $('#selectedRange').val();
                }

                {% autoescape false %}
                var url = '{{ path('paprec_quoteRequest_addLine', {id: quoteRequest.id, selectedCatalog: '0000', selectedRangeId: '1111'}) }}'.replace('0000', selectedCatalog).replace('1111', selectedRange);
                {% endautoescape %}

                location.href = url;
                return false;
            });

            {# $('#resetFilterButton').on('click', function () { #}
            {#    {% autoescape false %} #}
            {#    var url = '{{ path('paprec_quoteRequest_addLine', {id: quoteRequest.id}) }}'; #}
            {#    {% endautoescape %} #}

            {#    location.href = url; #}
            {#    return false; #}
            {# }); #}

        });
    </script>
{% endblock %}
