{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Range.View'| trans({}, "messages", app.request.locale) }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'Catalog.Range.Ranges'| trans({}, "messages", app.request.locale) }}
{% endblock %}

{% block main_content %}
    <div class="col-md-12">
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-xs fa-folder"></i> {{ 'Catalog.Range.View'| trans({}, "messages", app.request.locale) }}
                </h4>
                <div class="float-right">
                    <a href="{{ path("paprec_range_addRangeLabel", {id: range.id}) }}"
                       class="btn btn-sm btn-success"><i
                                class="fa fa-xs fa-plus"></i> {{ 'Catalog.RangeLabel.Add'| trans({}, "messages", app.request.locale) }}
                    </a>
                    <a href="{{ path("paprec_range_edit", {id: range.id}) }}"
                       class="btn btn-sm btn-warning"><i
                                class="fa fa-xs fa-edit"></i> {{ 'Catalog.Range.Edit'| trans({}, "messages", app.request.locale) }}
                    </a>
                    <a id="catalogRangeRemoveButton" href="javascript:void(0);" class="btn btn-sm btn-danger"><i
                                class="fa fa-xs fa-trash"></i> {{ 'Catalog.Range.Remove'| trans({}, "messages", app.request.locale) }}
                    </a>
                </div>
                <div class="float-left">
                    <a href="{{ path('paprec_range_index') }}" class="btn btn-sm btn-default"><i
                                class="fa fa-xs fa-chevron-left"></i> {{ 'Catalog.Range.List'| trans({}, "messages", app.request.locale) }}
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'General.Information'| trans({}, "messages", app.request.locale) }}</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.RangeLabel.Language.Language'| trans({}, "messages", app.request.locale) }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ rangeLabel.language }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.RangeLabel.Name'| trans({}, "messages", app.request.locale) }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ rangeLabel.name }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.RangeLabel.Short-description'| trans({}, "messages", app.request.locale) }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ rangeLabel.shortDescription|nl2br }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.Range.IsEnabled.IsEnabled'| trans({}, "messages", app.request.locale) }}</label>
                                    <label class="col-form-label col-md-8">
                                        {% if range.IsEnabled == 1 %}{{ 'Catalog.Range.IsEnabled.Yes'| trans({}, "messages", app.request.locale) }}{% else %}{{ 'Catalog.Range.IsEnabled.No'| trans({}, "messages", app.request.locale) }}{% endif %}
                                    </label>
                                </div>
                            </div>
                            {#
                                Affichage des photos
                            #}
                            <div class="col-md-6">
                                {#
                                    Affichage des photos PilotPicture
                                #}
                                <div class="col-md-12 mt-2 no-gutters">
                                    <div class="card">
                                        <div class="card-header">
                                            {{ 'Catalog.Range.PilotPicture'| trans({}, "messages", app.request.locale) }}
                                            {% if range.pictures is empty %}
                                                <div class="float-right">
                                                    <button class="btn btn-sm btn-outline-primary"
                                                            data-target="#uploadPictureModal" data-toggle="modal"
                                                            data-type="PILOTPICTURE" id="openModalUploadPicture">
                                                        <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.Range.AddPicture'| trans({}, "messages", app.request.locale) }}
                                                    </button>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="card-body">
                                            <div class="card-group">
                                                {% if (range.pilotPictures) %}
                                                    {% for picture in range.pilotPictures %}
                                                        <div class="card card-sec">
                                                            <div class="card-header">
                                                                {#<div class="float-left"> {{ 'Catalog.Range.PilotPicture'| trans({}, "messages", app.request.locale) }}</div>#}
                                                                <div class="dropdown float-right">
                                                                    <button class="p-0 btn btn-sm btn-light dropdown-toggle btn-sm"
                                                                            type="button" id="{{ picture.id }}"
                                                                            data-toggle="dropdown" aria-haspopup="true"
                                                                            aria-expanded="false">
                                                                        <i class="fa fa-xs fa-cog"></i>
                                                                    </button>
                                                                    <div class="dropdown-menu"
                                                                         aria-labelledby="{{ picture.id }}">
                                                                        <button id="pictureEditButton"
                                                                                class="dropdown-item"
                                                                                type="button"
                                                                                data-target="#editPictureModal"
                                                                                data-toggle="modal"
                                                                                data-type="PILOTPICTURE"
                                                                                data-id="{{ picture.id }}">
                                                                            <i class="fa fa-xs fa-pencil-alt"></i> {{ 'General.Edit'| trans({}, "messages", app.request.locale) }}
                                                                        </button>
                                                                        <button data-id="{{ picture.id }}"
                                                                                class="dropdown-item removePictureButton"
                                                                                type="button">
                                                                            <i class="fa fa-xs fa-trash"></i> {{ 'General.Remove'| trans({}, "messages", app.request.locale) }}
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <img class="card-img-top"
                                                                 src="{{ asset('/uploads/pictos/' ~ picture.path) }}"
                                                                 alt="{{ 'Catalog.Range.Pictures'| trans({}, "messages", app.request.locale) }}">
                                                        </div>
                                                    {% endfor %}
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {#
                                    Affichage photo de type PilotPicture
                                #}
                            </div>
                        </div>
                        {#
                            Modal d'affichage des formulaires
                        #}
                        <div class="modal fade" id="uploadPictureModal" tabindex="-1" role="dialog"
                             aria-labelledby="Upload Picture" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <form id="formAddPicture" name="formAddPicture"
                                            {% set params = {id: range.id, type: 'Picture' } %}
                                          action="{{ path("paprec_range_addPicture", params) }}"
                                          method="post" enctype="multipart/form-data">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="uploadPictureModalTitle">
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <div class="form-label">
                                                    {{ 'Catalog.Picture.Path'| trans({}, "messages", app.request.locale) }}
                                                    <span id="uploadPictureSizeInfo">

                                                        </span>
                                                </div>
                                                <div class="form-content">
                                                    {{ form_widget(formAddPicture.path, {'attr': {'class': 'form-control'}}) }}
                                                    {{ form_errors(formAddPicture.path) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-sm btn-secondary"
                                                    data-dismiss="modal">
                                                {{ 'General.Cancel'| trans({}, "messages", app.request.locale) }}
                                            </button>
                                            <button type="button" class="btn btn-sm btn-primary"
                                                    id="formAddPictureSubmitButton">
                                                {{ 'General.Save'| trans({}, "messages", app.request.locale) }}
                                            </button>
                                        </div>
                                        {{ form_rest(formAddPicture) }}
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="modal fade" id="editPictureModal" tabindex="-1" role="dialog"
                             aria-labelledby="Edit Picture" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <form id="formEditPicture" name="formEditPicture"
                                          action=""
                                          method="post" enctype="multipart/form-data">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editPictureModalTitle">
                                                {{ 'Catalog.Range.EditPicture'| trans({}, "messages", app.request.locale) }}
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <div class="form-label">
                                                    {{ 'Catalog.Picture.Path'| trans({}, "messages", app.request.locale) }}
                                                    <span id="editPictureSizeInfo">

                                                        </span>
                                                </div>
                                                <div class="form-content">
                                                    {{ form_widget(formEditPicture.path, {'attr': {'class': 'form-control'}}) }}
                                                    {{ form_errors(formEditPicture.path) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-sm btn-secondary"
                                                    data-dismiss="modal">
                                                {{ 'General.Cancel'| trans({}, "messages", app.request.locale) }}
                                            </button>
                                            <button type="button" class="btn btn-sm btn-primary"
                                                    id="formEditPictureSubmitButton">
                                                {{ 'General.Save'| trans({}, "messages", app.request.locale) }}
                                            </button>
                                        </div>
                                        {{ form_rest(formEditPicture) }}
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mt-3">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">{{ 'General.System-information'| trans({}, "messages", app.request.locale) }}</h5>
                    </div>
                    <div class="card-body">

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">{{ 'General.Date-creation'| trans({}, "messages", app.request.locale) }}</label>
                            <label class="col-form-label col-md-8">
                                {{ range.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                            </label>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">{{ 'General.Date-update'| trans({}, "messages", app.request.locale) }}</label>
                            <label class="col-form-label col-md-8">
                                {{ range.dateUpdate is empty ? "" : range.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            {% for pL in otherRangeLabels %}
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ ('Catalog.RangeLabel.Language.'~pL.language)| trans({}, "messages", app.request.locale) }}</h5>
                            <div class="float-right">
                                <a href="{{ path("paprec_range_editRangeLabel", {id: range.id, rangeLabelId: pL.id}) }}"
                                   class="btn btn-sm btn-warning"><i
                                            class="fa fa-xs fa-edit"></i> {{ 'Catalog.RangeLabel.Edit'| trans({}, "messages", app.request.locale) }}
                                </a>
                                <a id="catalogRangeLabelRemoveButton_{{ pL.id }}" href="javascript:void(0);"
                                   class="btn btn-sm btn-danger catalogRangeLabelRemoveButton"><i
                                            class="fa fa-xs fa-trash"></i> {{ 'Catalog.RangeLabel.Remove'| trans({}, "messages", app.request.locale) }}
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.RangeLabel.Name'| trans({}, "messages", app.request.locale) }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ pL.name }}
                                </label>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.RangeLabel.Short-description'| trans({}, "messages", app.request.locale) }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ pL.shortDescription|nl2br }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

    {% block javascripts %}

        <script>
            $(function () {

                $('#catalogRangeRemoveButton').on('click', function () {

                    var url = "{{ path("paprec_range_remove", {id: range.id}) }}";

                    Swal.fire({
                        title: "{{ 'General.Confirm'| trans({}, "messages", app.request.locale) }}",
                        text: "{{ 'General.Confirm-remove'| trans({}, "messages", app.request.locale) }}",
                        showCancelButton: true,
                        confirmButtonText: "{{ 'General.Yes'| trans({}, "messages", app.request.locale) }}",
                        cancelButtonText: "{{ 'General.No'| trans({}, "messages", app.request.locale) }}"
                    }).then(function (result) {
                        if (result.value) {
                            $(location).attr('href', url);
                        }
                    });

                });

                $('.catalogRangeLabelRemoveButton').on('click', function () {

                    var pLId = $(this).attr('id').replace('catalogRangeLabelRemoveButton_', '');

                    var url = "{{ path("paprec_range_removeRangeLabel", {id: range.id, rangeLabelId: 'rangeLabelId'}) }}".replace('rangeLabelId', pLId);

                    Swal.fire({
                        title: "{{ 'General.Confirm'| trans({}, "messages", app.request.locale) }}",
                        text: "{{ 'General.Confirm-remove'| trans({}, "messages", app.request.locale) }}",
                        showCancelButton: true,
                        confirmButtonText: "{{ 'General.Yes'| trans({}, "messages", app.request.locale) }}",
                        cancelButtonText: "{{ 'General.No'| trans({}, "messages", app.request.locale) }}"
                    }).then(function (result) {
                        if (result.value) {
                            $(location).attr('href', url);
                        }
                    });

                });

                $('.catalog-Range-save-button').on('click', function () {

                    $('#catalogRangeForm').submit();

                });

                // Au chargement de la modal d'ajout d'une photo
                // On met à jour le titre de la modal d'ajout de photo en fonction du type que l'on ajoute
                // On modifie aussi l'url d'action pour passer en paramètre le type de photo à ajouter
                $('#uploadPictureModal').on('show.bs.modal', function (e) {
                    var type = $(e.relatedTarget).data('type');
                    var actionUrl = "{{ path("paprec_range_addPicture", {id: range.id, type: 'typeTmp'}) }}";
                    var sizeInfo = document.getElementById('uploadPictureSizeInfo');

                    actionUrl = actionUrl.replace('typeTmp', type);
                    document.formAddPicture.action = actionUrl;
                    switch (type) {
                        case 'Picto':
                            type = "{{ 'Catalog.Range.Picto'| trans({}, "messages", app.request.locale) }}";
                            sizeInfo.innerText = '(125 x 120 pixels)';
                            break;
                        case 'PilotPicture':
                            type = "{{ 'Catalog.Range.PilotPicture'| trans({}, "messages", app.request.locale) }}";
                            sizeInfo.innerText = '(277 x 395 pixels)';
                            break;
                        default:
                            type = "{{ 'Catalog.Range.Pictures'| trans({}, "messages", app.request.locale) }}";
                            sizeInfo.innerText = '(60 x 60 pixels)';
                            break;
                    }
                    var title = document.getElementById('uploadPictureModalTitle');
                    title.innerText = type;
                });

                // Au chargement de la modal d'édition d'une photo
                // On modifie l'URL d'action du formulaire pour passer en paramètre l'ID de la photo modifiée
                $('#editPictureModal').on('show.bs.modal', function (e) {
                    var pictureID = $(e.relatedTarget).data('id');
                    var type = $(e.relatedTarget).data('type');
                    var actionUrl = "{{ path("paprec_range_editPicture", {id: range.id, pictureID: 'pictureTmp'}) }}";
                    var sizeInfo = document.getElementById('editPictureSizeInfo');

                    actionUrl = actionUrl.replace('pictureTmp', pictureID);
                    document.formEditPicture.action = actionUrl;
                    switch (type) {
                        case 'Picto':
                            type = "{{ 'Catalog.Range.Picto'| trans({}, "messages", app.request.locale) }}";
                            sizeInfo.innerText = '(125 x 120 pixels)';
                            break;
                        case 'PilotPicture':
                            type = "{{ 'Catalog.Range.PilotPicture'| trans({}, "messages", app.request.locale) }}";
                            sizeInfo.innerText = '(277 x 395 pixels)';
                            break;
                        default:
                            type = "{{ 'Catalog.Range.Pictures'| trans({}, "messages", app.request.locale) }}";
                            sizeInfo.innerText = '(60 x 60 pixels)';
                            break;
                    }
                    var title = document.getElementById('editPictureModalTitle');
                    title.innerText = type;
                });


                $('.removePictureButton').on('click', function () {
                    picId = $(this).data('id');
                    Swal.fire({
                        title: "{{ 'General.Confirm'| trans({}, "messages", app.request.locale) }}",
                        text: "{{ 'General.Confirm-remove'| trans({}, "messages", app.request.locale) }}",
                        showCancelButton: true,
                        confirmButtonText: "{{ 'General.Yes'| trans({}, "messages", app.request.locale) }}",
                        cancelButtonText: "{{ 'General.No'| trans({}, "messages", app.request.locale) }}"
                    }).then(function (result) {
                        if (result.value) {
                            var url = "{{ path("paprec_range_removePicture", {id: range.id, pictureID: 'pictureTmp'}) }}";
                            url = url.replace('pictureTmp', picId);
                            $(location).attr('href', url);
                        }
                    });
                });


                $('#formAddPictureSubmitButton').on('click', function () {
                    $('#formAddPicture').submit();
                });

                $('#formEditPictureSubmitButton').on('click', function () {
                    $('#formEditPicture').submit();
                });
            });
        </script>

    {% endblock %}
