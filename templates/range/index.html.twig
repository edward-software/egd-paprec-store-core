{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Range.Ranges'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.Range.Ranges'|trans }}
{% endblock %}

{% block main_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-list"></i> {{ 'Catalog.Range.List'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="{{ path('paprec_range_add') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.Range.Add'|trans }}
                        </a>
                        <a href="{{ path('paprec_range_export') }}" class="btn btn-sm btn-primary ">
                            <i class="fa fa-xs fa-file-excel"></i> {{ 'Catalog.Range.Export'|trans }}
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <table id="rangeListDatatable" class="table table-striped table-bordered table-hover"
                           cellpadding="0" cellspacing="0" border="0" width="100%">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'Catalog.RangeLabel.Name'|trans }}</th>
                            <th>{{ 'Catalog.Product.Catalog.Label'|trans }}</th>
                            <th>{{ 'Catalog.Range.IsEnabled.IsEnabled'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>

        $(function () {

            $('#rangeListDatatable').EgdDatatable({
                url: "{{ path('paprec_range_loadList') }}",
                columns: [
                    {"data": "id"},
                    {"data": "name"},
                    {"data": "catalog"},
                    {"data": "isEnabled"},
                    {"data": "id", "width": "10%", "bSortable": false, "className": "cell-action-button"}
                ],
                rowDblclick: {
                    type: 'open',
                    url: "{{ path('paprec_range_view', {id: '__rowId__'}) }}"
                },
                buttons: [
                    {
                        label: '{{ "Catalog.Range.IsEnabled.Disable"|trans }}',
                        type: 'ajaxMany',
                        url: "{{ path("paprec_range_disableMany", {ids: '__rowIds__', json: 1}) }}",
                        confirmMessage: "{{ 'General.Confirm-disable'|trans|e('js') }}",
                        className: 'btn-sm'
                    },
                    {
                        label: '{{ "Catalog.Range.IsEnabled.Enable"|trans }}',
                        type: 'ajaxMany',
                        url: "{{ path("paprec_range_enableMany", {ids: '__rowIds__', json: 1}) }}",
                        confirmMessage: "{{ 'General.Confirm-disable'|trans|e('js') }}",
                        className: 'btn-sm'
                    },
                    {
                        label: '{{ "General.Remove"|trans }}',
                        type: 'ajaxMany',
                        url: "{{ path("paprec_range_removeMany", {ids: '__rowIds__', json: 1}) }}",
                        confirmMessage: "{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn-sm'
                    }
                ],
                rowButtons: [
                    {
                        label: "{{ 'General.View'|trans }}",
                        className: "btn btn-primary btn-sm",
                        icon: "fa fa-eye",
                        url: "{{ path('paprec_range_view', {id: '__rowId__'}) }}"
                    },
                    {
                        label: "{{ 'General.Edit'|trans }}",
                        className: "btn btn-warning btn-sm",
                        icon: "fa fa-edit",
                        url: "{{ path('paprec_range_edit', {id: '__rowId__'}) }}"
                    },
                    {
                        label: '{{ "General.Remove"|trans }}',
                        type: 'ajax',
                        url: "{{ path("paprec_range_removeMany", {ids: '__rowId__', json: 1}) }}",
                        confirmMessage: "<span class='confirm-remove-style'>{{ 'General.Confirm'|trans|e('js') }}</span><br>{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn btn-danger btn-sm',
                        icon: "fa fa-times"
                    }

                ]
            });
        });
    </script>
{% endblock %}
