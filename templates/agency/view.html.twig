                                                   data-target="#uploadAgencyFileModal"
                                                   data-toggle="modal"
                                                   id="openModalUploadAgencyFile"><i
                                                            class="fa fa-file"></i> {{ 'Catalog.AgencyFile.BtnAddLabel'| trans({}, "messages", app.request.locale) }}
                                                </a>
                                            </div>

                                            <table id="agencyFileListDatatable"
                                                   class="table table-striped table-bordered table-hover"
                                                   cellpadding="0" cellspacing="0" border="0">
                                                <thead>
                                                <tr>
                                                    <th>{{ 'Catalog.AgencyFile.FileNameColumn'| trans({}, "messages", app.request.locale) }}</th>
                                                    <th>{{ 'Catalog.AgencyFile.Type.Type'| trans({}, "messages", app.request.locale) }}</th>
                                                    <th>{{ 'Catalog.AgencyFile.FileTypeColumn'| trans({}, "messages", app.request.locale) }}</th>
                                                    <th></th>
                                                </tr>
                                                </thead>
                                                <tbody>

                                                {% if agency.agencyFiles is not null and agency.agencyFiles|length > 0 %}
                                                    {% for agencyFile in agency.agencyFiles %}

                                                        <tr>
                                                            <td>
                                                                {{ agencyFile.originalFileName }}
                                                            </td>

                                                            <td>
                                                                {% if agencyFile.type %}
                                                                    {{ ('Catalog.AgencyFile.Type.'~agencyFile.type)|trans }}
                                                                {% endif %}
                                                            </td>

                                                            <td>
                                                                {{ agencyFile.originalFileName|split('.')|last|upper }}
                                                            </td>

                                                            <td class="text-center">
                                                                <a href="{{ path('paprec_agency_download_agency_file', {id: agencyFile.id}) }}"
                                                                   class="btn btn-sm btn-info">
                                                                    <i class="fa fa-xs fa-download"></i>
                                                                </a>
                                                                <a href="#"
                                                                   class="btn btn-sm btn-danger commercialAgencyFileRemoveButton"
                                                                   data-id="{{ agencyFile.id }}">
                                                                    <i class="fa fa-xs fa-trash"></i>
                                                                </a>
