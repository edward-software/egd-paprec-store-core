{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.PostalCode.PostalCodes'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'Catalog.PostalCode.PostalCodes'|trans }}
{% endblock %}

{% block main_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-list"></i> {{ 'Catalog.PostalCode.List'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="{{ path('paprec_postalCode_add') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.PostalCode.Add'|trans }}
                        </a>
                        <a href="{{ path('paprec_postalCode_export') }}" class="btn btn-sm btn-primary ">
                            <i class="fa fa-xs fa-file-excel"></i> {{ 'Catalog.PostalCode.Export'|trans }}
                        </a>

                        <button class="btn btn-sm btn-secondary" data-target="#uploadPostalCodeFileModal" data-toggle="modal"
                                id="openModalUploadPostalCodeFile"><i
                                    class="fa fa-xs fa-file-excel"></i> {{ 'Catalog.PostalCode.Import'|trans }}
                        </button>

{#                        <form method="post" enctype="multipart/form-data"#}
{#                              action="{{ path('paprec_postalCode_import') }}"#}
{#                              style="display: inline-block">#}
{#                            <input type="file" name="file" accept=".xlsx" id="postalCodeInputFile">#}

{#                            <button class="btn btn-sm btn-secondary import-button"><i#}
{#                                        class="fa fa-xs fa-file-excel"></i> {{ 'Catalog.PostalCode.Import'|trans }}#}
{#                            </button>#}
{#                        </form>#}

                        <!-- Modal d'import de fichier -->
                        <div class="modal fade" id="uploadPostalCodeFileModal" tabindex="-1" role="dialog"
                             aria-labelledby="Upload file" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <form id="formAddPostalCodeFile" name="formAddPostalCodeFile"
                                          action="{{ path("paprec_postalCode_import") }}"
                                          method="post" enctype="multipart/form-data">
                                        <div class="modal-header">
                                            <h5 class="modal-title">
                                                {{ 'Catalog.PostalCode.ImportModalTitle'| trans({}, "messages", app.request.locale) }}
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <input type="file" name="file" accept=".xlsx" id="postalCodeInputFile">
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-sm btn-secondary"
                                                    data-dismiss="modal">
                                                {{ 'General.Cancel'| trans({}, "messages", app.request.locale) }}
                                            </button>
                                            <button class="btn btn-sm btn-primary"
                                                    id="formAddPostalCodeFileSubmitButton">
                                                {{ 'General.Save'| trans({}, "messages", app.request.locale) }}
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="card-body">
                    <table id="postalCodesListDatatable" class="table table-striped table-bordered table-hover"
                           cellpadding="0" cellspacing="0" border="0" width="100%">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'Catalog.PostalCode.Code'|trans }}</th>
                            <th>{{ 'Catalog.PostalCode.City'|trans }}</th>
                            <th>{{ 'Catalog.PostalCode.Agency'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
            <!-- /BOX -->
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {

            // $('.import-button').hide();

            // $('#postalCodeInputFile').on('change', function (e) {
            //     if ( $('.import-button').css('display') == 'none' || $('.import-button').css("visibility") == "hidden"){
            //         $('.import-button').show();
            //     } else {
            //         $('.import-button').hide();
            //     }
            // });

            $('#formAddPostalCodeFileSubmitButton').on('click', function () {
                $('#formAddPostalCodeFile').submit();
            });

            $('#postalCodesListDatatable').EgdDatatable({
                url: "{{ path('paprec_postalCode_loadList') }}",
                columns: [
                    {"data": "id"},
                    {"data": "code"},
                    {"data": "city"},
                    {"data": "agency"},
                    {"data": "id", "width": "10%", "bSortable": false, "className": "cell-action-button"}
                ],
                rowDblclick: {
                    type: 'open',
                    url: "{{ path('paprec_postalCode_view', {id: '__rowId__'}) }}"
                },
                buttons: [
                    {
                        label: '<span data-toggle="tooltip" data-placement="top" title="{{ "General.Remove-multiple"|trans }}">{{ "General.Remove"|trans }}</span>',
                        type: 'ajaxMany',
                        url: "{{ path("paprec_postalCode_removeMany", {ids: '__rowIds__', json: 1}) }}",
                        confirmMessage: "{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn-sm',
                        buttons:
                            {
                                cancel: {
                                    label: '{{ 'General.Cancel'|trans|e('js') }}'
                                },
                                confirm: {
                                    label: '{{ 'General.Confirm'|trans|e('js') }}'
                                }
                            }
                    }
                ],
                rowButtons: [
                    {
                        label: "{{ 'General.View'|trans }}",
                        className: "btn btn-primary btn-sm",
                        icon: "fa fa-eye",
                        url: "{{ path('paprec_postalCode_view', {id: '__rowId__'}) }}"
                    },
                    {
                        label: "{{ 'General.Edit'|trans }}",
                        className: "btn btn-warning btn-sm",
                        icon: "fa fa-edit",
                        url: "{{ path('paprec_postalCode_edit', {id: '__rowId__'}) }}"
                    },
                    {
                        label: '{{ "General.Remove"|trans }}',
                        type: 'ajax',
                        url: "{{ path("paprec_postalCode_removeMany", {ids: '__rowId__', json: 1}) }}",
                        confirmMessage: "<span class='confirm-remove-style'>{{ 'General.Confirm'|trans|e('js') }}</span><br>{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn btn-danger btn-sm',
                        icon: "fa fa-times"
                    }

                ]
            });
        });
    </script>
{% endblock %}
