{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Product.Products'|trans }}
{% endblock %}

{% block stylesheets %}
    <style>
        select.form-control {
            width: auto;
        }
    </style>
{% endblock %}

{% block content_title %}
    {{ 'Catalog.Product.Products'|trans }}
{% endblock %}

{% block main_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-list"></i> {{ 'Catalog.Product.List'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="{{ path('paprec_product_add') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.Product.Add'|trans }}
                        </a>
                        <a href="{{ path('paprec_product_material_add') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.Product.Add-material'|trans }}
                        </a>
                        <a href="{{ path('paprec_product_export') }}" class="btn btn-sm btn-primary ">
                            <i class="fa fa-xs fa-file-excel"></i> {{ 'Catalog.Product.Export'|trans }}
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="paprec-flex mb-4">
                        <select id="selectedCatalog" class="form-control mr-2 input-sm">
                            <option value="#">Sélectionner catalogue</option>
                            <option value="REGULAR">{{ 'Commercial.QuoteRequest.REGULAR'|trans }}</option>
                            <option value="PONCTUAL">{{ 'Commercial.QuoteRequest.PONCTUAL'|trans }}</option>
                            <option value="MATERIAL">{{ 'Commercial.QuoteRequest.MATERIAL'|trans }}</option>
                        </select>
                        <select id="selectedRange" class="form-control mr-2 input-sm">
                            <option value="#">Sélectionner une gamme</option>
                            {% if ranges and ranges|length > 0 %}
                                {% for range in ranges %}
                                    {% if range.rangeLabels and range.rangeLabels|length %}
                                        <option value="{{ range.id }}">{{ range.rangeLabels[0].name }}</option>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}

                        </select>
                        <select id="isEnabled" class="form-control mr-2 input-sm">
                            <option value="#">Sélectionner un statut</option>
                            <option value="1">Actif</option>
                            <option value="0">Inactif</option>
                        </select>
                        <button
                                id="applyFilterButton"
                                class="btn btn-outline-primary mr-2">
                            Appliquer les filtres
                        </button>
                        <button
                                id="resetFilterButton"
                                class="btn btn-outline-secondary">
                            Réinitialiser
                        </button>
                    </div>
                    <table id="productListDatatable" class="table table-striped table-bordered table-hover"
                           cellpadding="0" cellspacing="0" border="0" width="100%">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'Catalog.ProductLabel.Name'|trans }}</th>
                            <th>{{ 'Catalog.Product.Range'|trans }}</th>
                            <th>{{ 'Catalog.Product.Catalog.Label'|trans }}</th>
                            <th>{{ 'Catalog.Product.IsEnabled.IsEnabled'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>

        $(function () {

            $('#productListDatatable').EgdDatatable({
                url: "{{ path('paprec_product_loadList') }}",
                columns: [
                    {"data": "id"},
                    {"data": "name"},
                    {"data": "range"},
                    {"data": "catalog"},
                    {"data": "isEnabled"},
                    {"data": "id", "width": "10%", "bSortable": false, "className": "cell-action-button"}
                ],
                formatRow: function (row, data) {
                    if (data['catalogLabel'] === 'MATERIAL') {
                        var url = '{{ path('paprec_product_material_edit', {'id': '0000'}) }}'.replace('0000', data['id']);
                        $(row).find('.edit-button').attr('href', url);
                    }
                },
                rowDblclick: {
                    type: 'open',
                    url: "{{ path('paprec_product_view', {id: '__rowId__'}) }}"
                },
                buttons: [
                    {
                        label: '<span data-toggle="tooltip" data-placement="top" title="{{ "Catalog.Product.IsEnabled.Disable-multiple"|trans }}">{{ "Catalog.Product.IsEnabled.Disable"|trans }}</span>',
                        type: 'ajaxMany',
                        url: "{{ path("paprec_product_disableMany", {ids: '__rowIds__', json: 1}) }}",
                        confirmMessage: "{{ 'General.Confirm-disable'|trans|e('js') }}",
                        className: 'btn-sm',
                        buttons:
                            {
                                cancel: {
                                    label: '{{ 'General.Cancel'|trans|e('js') }}'
                                },
                                confirm: {
                                    label: '{{ 'General.Confirm'|trans|e('js') }}'
                                }
                            }
                    },
                    {
                        label: '<span data-toggle="tooltip" data-placement="top" title="{{ "Catalog.Product.IsEnabled.Enable-multiple"|trans }}">{{ "Catalog.Product.IsEnabled.Enable"|trans }}</span>',
                        type: 'ajaxMany',
                        url: "{{ path("paprec_product_enableMany", {ids: '__rowIds__', json: 1}) }}",
                        confirmMessage: "{{ 'General.Confirm-enable'|trans|e('js') }}",
                        className: 'btn-sm',
                        buttons:
                            {
                                cancel: {
                                    label: '{{ 'General.Cancel'|trans|e('js') }}'
                                },
                                confirm: {
                                    label: '{{ 'General.Confirm'|trans|e('js') }}'
                                }
                            }
                    },
                    {
                        label: '<span data-toggle="tooltip" data-placement="top" title="{{ "General.Remove-multiple"|trans }}">{{ "General.Remove"|trans }}</span>',
                        type: 'ajaxMany',
                        url: "{{ path("paprec_product_removeMany", {ids: '__rowIds__', json: 1}) }}",
                        confirmMessage: "{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn-sm',
                        buttons:
                            {
                                cancel: {
                                    label: '{{ 'General.Cancel'|trans|e('js') }}'
                                },
                                confirm: {
                                    label: '{{ 'General.Confirm'|trans|e('js') }}'
                                }
                            }
                    }
                ],
                rowButtons: [
                    {
                        label: "{{ 'General.View'|trans }}",
                        className: "btn btn-primary btn-sm",
                        icon: "fa fa-eye",
                        url: "{{ path('paprec_product_view', {id: '__rowId__'}) }}"
                    },
                    {
                        label: "{{ 'General.Edit'|trans }}",
                        className: "btn btn-warning btn-sm edit-button",
                        icon: "fa fa-edit",
                        url: "{{ path('paprec_product_edit', {id: '__rowId__'}) }}"
                    },
                    {
                        label: '{{ "General.Remove"|trans }}',
                        type: 'ajax',
                        url: "{{ path("paprec_product_removeMany", {ids: '__rowId__', json: 1}) }}",
                        confirmMessage: "<span class='confirm-remove-style'>{{ 'General.Confirm'|trans|e('js') }}</span><br>{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn btn-danger btn-sm',
                        icon: "fa fa-times"
                    }

                ]
            });

            $('[data-toggle="tooltip"]').tooltip();

            $('#applyFilterButton').on('click', function () {
                {% autoescape false %}
                const listUrl = "{{ url('paprec_product_loadList') }}";
                {% endautoescape %}

                const filterUrl = new URL(listUrl);
                const params = new URLSearchParams(filterUrl.search);
                params.set('selectedRange', $('#selectedRange').val());
                params.set('selectedCatalog', $('#selectedCatalog').val());
                params.set('isEnabled', $('#isEnabled').val());

                filterUrl.search = params;

                $('#productListDatatable').DataTable().ajax.url(filterUrl.toString()).load();
            });

            $('#resetFilterButton').on('click', function () {
                {% autoescape false %}
                const listUrl = "{{ url('paprec_quoteRequest_loadList') }}";
                {% endautoescape %}

                const filterUrl = new URL(listUrl);
                const params = new URLSearchParams(filterUrl.search);

                $('#selectedRange').val('#');
                $('#selectedCatalog').val('#');
                $('#isEnabled').val('#');

                params.set('sessionReset', true);
                filterUrl.search = params;
                $('#productListDatatable').DataTable().ajax.url(filterUrl.toString()).load();
            });
        });
    </script>
{% endblock %}
