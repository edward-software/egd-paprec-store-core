{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.FollowUp.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Commercial.FollowUp.Add'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogFollowUpForm" action="" method="post">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-plus"></i> {{ 'Commercial.FollowUp.Add'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-followUp-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'General.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-followUp-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'General.Cancel'|trans }}</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'General.Information'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="form-label">{{ 'Commercial.FollowUp.Date'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.date, {'attr': {'class': 'form-control datepicker'}}) }}
                                        {{ form_errors(form.date) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Commercial.FollowUp.Status.Status'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.status) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Commercial.FollowUp.Content'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.content) }}
                                    </div>
                                </div>
                                {% if quoteRequest is not defined %}
                                    <div class="form-group">
                                        <div class="form-label">{{ 'Commercial.FollowUp.QuoteRequest.QuoteRequest'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form.quoteRequest, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.quoteRequest) }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-followUp-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'General.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-followUp-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'General.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-followUp-save-button').on('click', function () {
                $('#catalogFollowUpForm').submit();
            });


            $('.catalog-followUp-cancel-button').on('click', function () {

                var url = "{{ path("paprec_follow_up_index") }}";

                Swal.fire({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'General.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then(function (result) {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}
